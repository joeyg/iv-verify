{
  "extends": ["plugin:i18next/recommended", "next/core-web-vitals"],
  "plugins": ["unused-imports"],
  "rules": {
    "no-unused-vars": "warn",
    "indent": ["error", 4],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
        "warn",
        {
            "vars": "all",
            "varsIgnorePattern": "^_",
            "args": "after-used",
            "argsIgnorePattern": "^_"
        }
    ]
  }
}
